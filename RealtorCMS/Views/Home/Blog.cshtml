@model IEnumerable<RealtorCMS.Models.Blog>

@{
    ViewBag.Title = "Blog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*Facebook Comments Plugin*@
<div id="fb-root"></div>
<script>
(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.9";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>


<div class="container body-content">

    @if (Model.Count() == 1)
    {
        @Html.ActionLink("Back to the blog", "Blog", "Home")
        <div class="row">
            <div class="col-xs-10">
                @foreach (var item in Model)
                {
                    <div class="margin-bottom">
                        <h1>@item.Title</h1>
                        @{
                            var path = "../../Content/images/" + item.PicturePath;
                        }
                        <img src="@path" class="img-responsive img-block" />
                        
                        <p>@item.Content</p>

                    </div>
                 }
            </div>
            <div class="col-xs-2">
                <div class="blue"><a href="@Url.Action("Buy","Home")" class="blue-link">Find my dream home</a></div>
                <div class="blue"><a href="@Url.Action("About","Home")" class="blue-link">Contact us today</a></div>
                <br />
                <div class="fb-page" data-href="https://www.facebook.com/zillow" data-tabs="timeline" data-small-header="false" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="true"><blockquote cite="https://www.facebook.com/zillow" class="fb-xfbml-parse-ignore"><a href="https://www.facebook.com/zillow">Zillow</a></blockquote></div>

            </div>
        </div>
        <div class="fb-comments" data-href="http://www.AgentCMS.com" data-width="100%" data-numposts="5"></div>


                            }
                            else
                            {
        <div class="row">
            <div class="col-xs-10">
                @foreach (var item in Model)
                {
                    <div class="margin-bottom">
                        <h1>@item.Title</h1>
                        @{
                            var path = "../Content/images/" + item.PicturePath;
                        }
                        <img src="@path" class="img-responsive img-block" />
                        @{
                            string previewString = String.Format("{0}...", item.Content.ToString().Substring(0, 500));
                        }
                        <p>@previewString</p>
                        @Html.ActionLink("Read full blog post", "Blog", new { id = item.Id })

                    </div>
                 }
            </div>
            <div class="col-xs-2">
                <div class="blue"><a href="@Url.Action("Buy","Home")" class="blue-link">Find my dream home</a></div>
                <div class="blue"><a href="@Url.Action("About","Home")" class="blue-link">Contact us today</a></div><br/>
                <div class="fb-page" data-href="https://www.facebook.com/zillow" data-tabs="timeline" data-small-header="false" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="true"><blockquote cite="https://www.facebook.com/zillow" class="fb-xfbml-parse-ignore"><a href="https://www.facebook.com/zillow">Zillow</a></blockquote></div>

            </div>
        </div>
     }
</div>
